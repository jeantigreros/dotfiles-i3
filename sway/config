# Sway configuration file
# Place this at ~/.config/sway/config
xwayland enable
set $mod Mod4
set $alt Mod1

# output for monitors
output eDP-1 pos 1920 0 res 1366x768
output HDMI-A-2 pos 0 0 res 1920x1080 

# Font for window titles
 font Iosevka Nerd Font 8 

# Keyboard layout
input * {
    xkb_options caps:escape
    xkb_layout us
    xkb_variant altgr-intl
}

# Display configuration
output HDMI-2 mode 1920x1080 position 0 0

# Network manager applet
exec nm-applet &

# Volume control
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume @DEFAULT_SINK@ +10%"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume @DEFAULT_SINK@ -10%"
bindsym XF86AudioMute exec "pactl set-sink-mute @DEFAULT_SINK@ toggle"
bindsym XF86AudioMicMute exec "pactl set-source-mute @DEFAULT_SOURCE@ toggle"

# Floating window modifier
floating_modifier $mod

# Terminal
bindsym $mod+Return exec kitty

# Workspace navigation
bindsym $mod+Shift+Tab workspace next
bindsym $mod+Control+Shift+Tab workspace prev

# Kill focused window
bindsym $mod+q kill

# Application launcher (Rofi)
bindsym $mod+d exec killall rofi || rofi -lines 12 -padding 18 -width 60 -location 0 -show drun -font 'mononoki 12'

# Focus movement
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $alt+Tab focus left

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split layout
bindsym $mod+b split h
bindsym $mod+v split v

# Fullscreen mode
bindsym $mod+f fullscreen toggle

# Change layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Reload and restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+q exec swaymsg exit

# Screenshots
bindsym Print exec "grimshot save area"

# Disable window titlebars
for_window [class="^.*"] border pixel 2

# Window resizing
bindsym $mod+Ctrl+l resize shrink width 10 px
bindsym $mod+Ctrl+j resize grow height 10 px
bindsym $mod+Ctrl+k resize shrink height 10 px
bindsym $mod+Ctrl+h resize grow width 10 px

# Launch Firefox
bindsym $mod+Shift+f exec firefox

# Set wallpaper
exec_always swaybg -i /home/j/Pictures/wallpaper.png -m fill

# Brightness control
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-
bindsym XF86MonBrightnessUp exec brightnessctl s +5%

# Compositor
exec_always mako &
exec_always swayidle -w timeout 600 'swaylock -f -c 000000' &

# Lock screen and suspend
bindsym Shift+$mod+Pause exec swaylock -c 000000 & systemctl suspend
bindsym $mod+Pause exec swaylock -c 000000

bar {
    position bottom 
    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command i3status
}
for_window [app_id="flameshot"] border pixel 0, floating enable, fullscreen disable, move absolute position 0 0
